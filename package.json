    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "config": {
    "supabase": {
      "project_id": "dkljgiwtzonycyoecnzd",
      "url": "https://dkljgiwtzonycyoecnzd.supabase.co",
      "features": [
        "authentication",
        "database",
        "realtime",
        "row-level-security",
        "connection-pooling"
      ]
    },
    "deployment": {
      "platforms": ["vercel", "netlify", "aws"],
      "environment_required": [
        "VITE_SUPABASE_URL",
