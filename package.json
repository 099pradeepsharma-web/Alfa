{
  "name": "alfanumrik",
  "private": true,
  "version": "0.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "vite",
    "type-check": "tsc --noEmit",
    "db:setup": "echo 'Run database/SETUP-SUPABASE.sql in your Supabase SQL Editor'",
    "db:seed": "echo 'Use DemoDataSeeder component in admin panel to seed test data'",
    "sync:test": "echo 'Use CloudStatus component to test cloud sync functionality'",
    "health:check": "echo 'Check app health with CloudStatus component'"
  },
  "dependencies": {
    "@dicebear/collection": "^2.1.2",
