# Alfanumrik Local Development Environment
# Copy from .env.example and fill in your actual values

# CORE APPLICATION SETTINGS
# =========================

# AI Content Generation (Required for app to work)
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Feature Flags
VITE_ENABLE_CLOUD_SYNC=true
VITE_PILOT_MODE=true
VITE_DEBUG_MODE=true

# Application
NODE_ENV=development
VITE_APP_NAME=Alfanumrik
VITE_APP_VERSION=0.2.0

# SUPABASE CONFIGURATION (Required for database)
# =============================================

VITE_SUPABASE_URL=https://dkljgiwtzonycyoecnzd.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Local Development
VITE_API_BASE_URL=http://localhost:3000

# Test Data
VITE_TEST_USER_EMAIL=test@demoschool.edu
VITE_ENABLE_DEMO_DATA=true

# INSTRUCTIONS:
# =============
# 1. Replace 'your_gemini_api_key_here' with actual Gemini API key from https://ai.studio/
# 2. Replace 'your_supabase_anon_key_here' with actual Supabase anon key from your project
# 3. Run: npm install
# 4. Run: npm run dev
